<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= htmlWebpackPlugin.options.title %></title>
  <% if (htmlWebpackPlugin.options.files.css) { %>
    <% htmlWebpackPlugin.options.files.css.forEach(function(name){ %>
      <link rel="stylesheet" type="text/css" href="<%= name %>">
    <% }) %>
  <% } %>
</head>
<body>
  <div id="container" class="animated fadeIn">
    <box>
      <breadcrumbs params="path: ['list']"></breadcrumbs>
      <box-filter params="title: $root.title, q: $root.q, placeholder:'输入我', query: $root.query">
        <div class="pull-left">
        <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.addFun">增加</button>
        <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.editFun">修改</button>
        <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.saveFun">保存</button>
        <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.deleteFun">删除</button>
        <button class="btn btn-primary btn-sm  m-r-sm" data-bind="click: $root.returnFun">返回到主界面</button>
        </div>
      </box-filter>
      <box-content id="main" >
        <box-tabs params="title: 'status 切换'">
          <state-tabs params="items: $root.statuItems, handler: $root.stateclick, index: $root.stateindex"></state-tabs>
        </box-tabs>
        <u-grid params="config: $root.config"></u-grid>
      </box-content>
      <box-content id="add" style="display: none">
         <div class="u-form-group">
          <div class="u-col-6">
          <label class="u-col-3 u-form-group-sm u-form-label text-right">
            编号：
          </label>
          <div class="u-col-3">
            <input type="text" class="u-form-control" data-bind="value: $root.model.ref('code')">
          </div>
          </div>
          <div class="u-col-6">
           <label class="u-col-3 u-form-group-sm u-form-label text-right">
            名称：
           </label>
           <div class="u-col-3">
            <input type="text" class="u-form-control" data-bind="value: $root.model.ref('name')">
          </div>
          </div>
         </div>
          <div class="u-form-group">
          <div class="u-col-6">
          <label class="u-col-3 u-form-group-sm u-form-label text-right">
            启用状态：
          </label>
          <div class="u-col-3">
             <u-select params='vm: {placeholder: "请选择",data: $root.model, datasource: $root.comboData }, umeta: { "field": "businessStatus" }'></u-select>
          </div>
          </div>
          <div class="u-col-6">
          <label class="u-col-3 text-right u-form-label">参照:</label>
          <div class="u-col-3">
            <refer params="type: 'org', showrefer: $root.showRefer, onselect: $root.select, placeholder: '输入查询', showtext: $root.model.ref('referName'), value: $root.model.ref('referId')"></refer>
          </div>
          </div>
         </div>
      </box-content>
    </box>
  </div>
<% if (htmlWebpackPlugin.options.files.js) { %>
  <% htmlWebpackPlugin.options.files.js.forEach(function(name){ %>
    <script type="text/javascript" src="<%= name %>"></script>
  <% }) %>
<% } %>
</body>
</html>
